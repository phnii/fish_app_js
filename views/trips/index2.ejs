<div class="container bg-white mb-3">
  <div class="row row-col-2 mt-5">
    <% trips.forEach(trip => { %>
      <div class="trip-container col-6 border p-3">
        <div class="trip-title"><a href="/trips/<%=trip._id%>" class="text-body h5"><%= trip.title %></a></div>
        <div class="d-flex mt-2">
          <div class="username">投稿日<%= trip.createdAt %> (<%= trip.prefecture %>)</div>
          <div class="username ml-auto">投稿者：<a href="#" class="ml-auto text-body"><%= trip.user.name %></a></div>
        </div>
        <div class="fish-result my-2">釣果：
          <% trip.fishes.forEach(fish => { %>
            <%= fish.name %>
          <% }) %>
        </div>
        <div class="content-container my-2">
          <%= trip.content %>
        </div>
        <div class="image-container">
        <% if (trip.fishes[0]) { %>
          <% if (trip.fishes[0].image) { %>
            <!-- リンク化 -->
            <img src="/uploads/<%=trip.fishes[0].image %>" width="80%" height="auto" alt="">
          <% } %>
        <% } %>
        </div>
      </div>
    <% }) %>
  
  </div>